<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>BLOCK Manager</h1>
    <a href="/tasks/create" class="btn btn-primary">Create New Task</a>
    
    <% if (tasks && tasks.length > 0) { %>
      <table class="task-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach(task => { %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
              <td><span class="status-<%= task.status %>"><%= task.status %></span></td>
              <td><%= new Date(task.createdAt).toLocaleDateString() %></td>
              <td class="actions">
                <a href="/tasks/edit/<%= task._id %>" class="btn btn-edit">Edit</a>
                <a href="/tasks/delete/<%= task._id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="no-tasks">No tasks found. Create a new task to get started.</p>
    <% } %>
  </div>
</body>
</html>